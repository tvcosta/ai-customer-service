    {
      "title": "Grounding Decisions",
      "description": "Grounding outcomes: grounded vs not grounded",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "datasource": { "type": "tempo", "uid": "tempo" },
      "targets": [
        {
          "datasource": { "type": "tempo", "uid": "tempo" },
          "queryType": "traceql",
          "query": "{ name = \"rag.ground\" && span.grounding.is_grounded = true } | count()"
        },
        {
          "datasource": { "type": "tempo", "uid": "tempo" },
          "queryType": "traceql",
          "query": "{ name = \"rag.ground\" && span.grounding.is_grounded = false } | count()"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "bars",
            "fillOpacity": 80,
            "stacking": { "mode": "normal" }
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byFrameRefID", "options": "A" },
            "properties": [
              { "id": "displayName", "value": "Grounded (Answered)" },
              { "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }
            ]
          },
          {
            "matcher": { "id": "byFrameRefID", "options": "B" },
            "properties": [
              { "id": "displayName", "value": "Not Grounded (Unknown)" },
              { "id": "color", "value": { "fixedColor": "orange", "mode": "fixed" } }
            ]
          }
        ]
      },
      "options": {
        "tooltip": { "mode": "single" },
        "legend": { "displayMode": "list" }
      }
    },
